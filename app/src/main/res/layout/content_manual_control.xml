<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/forward_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HACIA DELANTE"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/backward_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forward_button"
        android:text="MARCHA ATRAS"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/left_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backward_button"
        android:text="IZQUIERDA"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/right_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_button"
        android:text="DERECHA"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>



</RelativeLayout>