<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <Button
        android:id="@+id/manual_control"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/text_button_main_manual_control"
        android:layout_weight="1.0"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:onClick="manualControl"
        />

    <Button
        android:id="@+id/actions_control"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/text_button_main_actions_control"
        android:layout_weight="1.0"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        android:onClick="actionsControl"
        />

</LinearLayout>